WHISPER_BIN=./bin/whisper
WHISPER_MODEL=./models/ggml-base.en.bin
OLLAMA_BASE_URL=http://localhost:11434

# Use llama 3.2 locally for summaries
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_SUMMARY_MODEL=llama3.2

# Open-source embedding model (alternatives: mxbai-embed-large, snowflake-arctic-embed)
OLLAMA_EMBED_MODEL=nomic-embed-text
transcription_engine=faster_whisper

# Enable high-accuracy multi-speaker diarization via pyannote (requires Hugging Face token)
# DIARIZATION_ENABLED=1
# HF_TOKEN=your_hf_token_here
# PYANNOTE_PIPELINE=pyannote/speaker-diarization-3.1
